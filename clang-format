BasedOnStyle: Google

# --- Line width ---
ColumnLimit: 80

# --- Indentation ---
IndentWidth: 2
IndentCaseLabels: true # Indent case labels inside a switch statement

# --- Templates ---
AlwaysBreakTemplateDeclarations: Yes

# --- Braces ---
BreakBeforeBraces: Attach # Keep { on the same line

# --- Function formatting ---
BinPackArguments: false # Put one argument per line if it exceeds ColumnLimit
BinPackParameters: false # Similar to |BinPackArguments| but for declarations
AlignAfterOpenBracket: true # Indents function arguments aligned under the opening (
AllowAllParametersOfDeclarationOnNextLine: false # Prevents everything from going on the next line unnecessarily.
